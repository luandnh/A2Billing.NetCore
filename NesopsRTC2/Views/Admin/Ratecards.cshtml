
@{
    ViewData["Title"] = "Ratecards";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">-- RATECARD LIST --</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Start Date</th>
                        <th>Expiry Date</th>
                        <th>Trunk</th>
                        <th>Minuter Used</th>
                        <th>DNID Prefix</th>
                        <th>CID Prefix</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
@section scripts{
    <script type="text/javascript">
        const TrunkData = $.ajax({
            "url": `/api/trunks`,
            "method": "GET",
            "datatype": 'application/json',
            "async": false,
            "headers": {
                "Content-Type": "application/json",
                "Authorization": 'Bearer ' + localStorage.getItem("nesops_access_token")
            }
        }).responseJSON.data;
        function CreateDataTable() {
            $('#dataTable').DataTable().destroy();
            $('#dataTable').DataTable({
                info: false,
                paging: true,
                ordering: true,
                lengthChange: false,
                data: $.ajax({
                    "url": `/api/Tariffplan`,
                    "method": "GET",
                    "datatype": 'application/json',
                    "async": false,
                    "headers": {
                        "Content-Type": "application/json",
                        "Authorization": 'Bearer ' + localStorage.getItem("nesops_access_token")
                    }
                }).responseJSON.data,
                columns: [
                    {
                        data: 'id'
                    },
                    {
                        data: 'tariffname'
                    },
                    {
                        data: 'startingdate',
                        render: function (data) {
                            var date = moment(data).format('DD/MM/YYYY  HH:mm:ss');
                            return date;
                        }
                    },
                    {
                        data: 'expirationdate',
                        render: function (data) {
                            var date = moment(data).format('DD/MM/YYYY  HH:mm:ss');
                            return date;
                        }
                    },
                    {
                        data: 'idTrunk',
                        render: function (data) {
                            for (var i = 0; i < TrunkData.length; i++) {
                                if (data == TrunkData[i].idTrunk) {
                                    return TrunkData[i].trunkcode;
                                }
                            }
                        }
                    },
                    {
                        data: 'secondusedreal',
                        render: function (data) {
                            return FormatTime(data);
                        }
                    },
                    {
                        data: 'dnidprefix'
                    },
                    {
                        data: 'calleridprefix'
                    },
                    {
                        data: 'id'
                    }
                ]
            });
        }
        $(document).ready(function (e) {
            CreateDataTable();
        });
        function FormatTime(totalSeconds) {
            let hours = Math.floor(totalSeconds / 3600);
            totalSeconds %= 3600;
            let minutes = Math.floor(totalSeconds / 60);
            let seconds = totalSeconds % 60;
            minutes = String(minutes).padStart(2, "0");
            hours = String(hours).padStart(2, "0");
            seconds = String(seconds).padStart(2, "0");
            return hours + ":" + minutes + ":" + seconds;
        }
    </script>
}



