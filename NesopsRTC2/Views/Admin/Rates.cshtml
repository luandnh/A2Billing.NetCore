
@{
    ViewData["Title"] = "Rates";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">-- RATES LIST --</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Destination</th>
                        <th>Prefix</th>
                        <th>BR</th>
                        <th>SR</th>
                        <th>Start Date</th>
                        <th>Stop Date</th>
                        <th>CC</th>
                        <th>Trunk</th>
                        <th>Ratecard</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
@section scripts{
    <script type="text/javascript">
        const TrunkData = $.ajax({
            "url": `/api/trunks`,
            "method": "GET",
            "datatype": 'application/json',
            "async": false,
            "headers": {
                "Content-Type": "application/json",
                "Authorization": 'Bearer ' + localStorage.getItem("nesops_access_token")
            }
        }).responseJSON.data;
        const TariffplanData = $.ajax({
            "url": `/api/Tariffplan`,
            "method": "GET",
            "datatype": 'application/json',
            "async": false,
            "headers": {
                "Content-Type": "application/json",
                "Authorization": 'Bearer ' + localStorage.getItem("nesops_access_token")
            }
        }).responseJSON.data;
        function CreateDataTable() {
            $('#dataTable').DataTable().destroy();
            $('#dataTable').DataTable({
                info: false,
                paging: true,
                ordering: true,
                lengthChange: false,
                data: $.ajax({
                    "url": `/api/RateCard`,
                    "method": "GET",
                    "datatype": 'application/json',
                    "async": false,
                    "headers": {
                        "Content-Type": "application/json",
                        "Authorization": 'Bearer ' + localStorage.getItem("nesops_access_token")
                    }
                }).responseJSON.data,
                columns: [
                    {
                        data: 'destination'
                    },
                    {
                        data: 'dialprefix'
                    },
                    {
                        data: 'buyrate'
                    },
                    {
                        data: 'rateinitial'
                    },
                    {
                        data: 'startdate',
                        render: function (data) {
                            var date = moment(data).format('DD/MM/YYYY  HH:mm:ss');
                            return date;
                        }
                    },
                    {
                        data: 'stopdate',
                        render: function (data) {
                            var date = moment(data).format('DD/MM/YYYY  HH:mm:ss');
                            return date;
                        }
                    },
                    {
                        data: 'connectcharge'
                    },
                    {
                        data: 'idTrunk',
                        render: function (data) {
                            for (var i = 0; i < TrunkData.length; i++) {
                                if (data == -1) {
                                    return "Default";
                                }
                                else if(data == TrunkData[i].idTrunk) {
                                    return TrunkData[i].trunkcode;
                                }
                            }
                        }
                    },
                    {
                        data: 'idtariffplan',
                        render: function (data) {
                            for (var i = 0; i < TariffplanData.length; i++) {
                                if (data == TariffplanData[i].id) {
                                    return TariffplanData[i].tariffname;
                                }
                            }
                        }
                    },
                    {
                        data: 'id'
                    }
                ]
            });
        }
        $(document).ready(function (e) {
            CreateDataTable();
        });
    </script>
}



